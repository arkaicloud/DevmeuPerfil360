
# Configuração de Produção - MeuPerfil360
NODE_ENV=production

# Domain Configuration
DOMAIN=www.meuperfil360.com.br
ALLOWED_ORIGINS=https://meuperfil360.com.br,https://www.meuperfil360.com.br

# Stripe Configuration (USAR CHAVES REAIS DE PRODUÇÃO)
VITE_STRIPE_PUBLIC_KEY=pk_live_...
STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Admin Configuration (ALTERAR PARA PRODUÇÃO)
ADMIN_EMAIL=admin@meuperfil360.com.br
ADMIN_PASSWORD_HASH=$2b$12$...  # Gerar novo hash mais forte

# Database Configuration (USAR BANCO DE PRODUÇÃO)
DATABASE_URL=postgresql://user:password@host:port/database?sslmode=require

# Email Configuration (CONFIGURAR SERVIÇO REAL)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=SG.xxx
SMTP_SECURE=false
FROM_EMAIL=contato@meuperfil360.com.br
FROM_NAME=MeuPerfil360

# Security Configuration
ENCRYPTION_SECRET=your-very-long-random-secret-key-for-encryption-minimum-32-chars
SESSION_SECRET=your-session-secret-key-different-from-encryption
CSRF_SECRET=your-csrf-secret-key-also-different

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100
ADMIN_RATE_LIMIT_MAX=30

# Logging
LOG_LEVEL=warn
ENABLE_ACCESS_LOGS=true
ENABLE_SECURITY_LOGS=true

# Performance
ENABLE_COMPRESSION=true
CACHE_STATIC_ASSETS=true
